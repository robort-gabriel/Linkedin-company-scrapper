{
  "manifest_version": 3,
  "name": "LinkedIn Company Data Extractor",
  "version": "1.1.4",
  "description": "Capture company information from LinkedIn search results you're viewing. Assists navigation across multiple pages.",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/extractors.js", "content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "LinkedIn Company Data Extractor"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

